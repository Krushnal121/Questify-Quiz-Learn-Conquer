<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/splashText01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/slagless"
        android:gravity="center"
        android:paddingHorizontal="35dp"
        android:paddingTop="5dp"
        android:text="Questify"
        android:textSize="55dp"
        app:layout_constraintBottom_toTopOf="@+id/splashImageview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.739"
        tools:layout_editor_absoluteX="0dp">

    </TextView>

    <ImageView


        android:id="@+id/splashImageview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/splashicon" />

    <TextView
        android:id="@+id/splashText02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/great_vibes"
        android:gravity="center"
        android:paddingHorizontal="35dp"
        android:paddingTop="5dp"
        android:text="By Krushnal Patil"
        android:textSize="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splashImageview"
        app:layout_constraintVertical_bias="0.261"
        tools:layout_editor_absoluteX="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>